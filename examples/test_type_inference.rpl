// 测试类型推断的编译输出

// 带显式类型
source a : int := 10;

// 省略类型（自动推断）
source b := 20;
source c := 3.14;
source flag := true;
source name := "hello";

// 流计算（类型自动推断）
stream sum <- a + b;
stream mixed <- a + c;
stream doubled <- sum * 2;

// 输出
sink sum_out <- sum;
sink mixed_out <- mixed;
sink doubled_out <- doubled;
